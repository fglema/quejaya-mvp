<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>QuejaYA.pe</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    body {
      font-family: sans-serif;
      text-align: center;
      max-width: 600px;
      margin: 4rem auto;
      padding: 0 1rem;
      background: #f7f7f7;
    }
    header { margin-bottom: 1rem; }
    .logo img { max-width: 200px; }
    .visually-hidden {
      position: absolute; width:1px; height:1px;
      margin:-1px; padding:0; border:0;
      clip:rect(0,0,0,0); overflow:hidden; white-space:nowrap;
    }
    h1 {
      color: #d92b2b;
      font-size: 2rem;
      margin-bottom: .5rem;
    }
    p.subtitle {
      color: #555;
      font-size: 1.1rem;
      margin-bottom: 2rem;
    }
    .roles {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
    @media (min-width:480px) {
      .roles { flex-direction: row; justify-content: center; }
    }
    .roles button {
      flex: 1;
      padding: 1rem;
      border: 2px solid #d92b2b;
      border-radius: 6px;
      background: white;
      color: #d92b2b;
      font-weight: bold;
      cursor: pointer;
      transition: background .2s, color .2s;
    }
    .roles button:hover {
      background: #d92b2b;
      color: white;
    }
    .identity-btn {
      margin-top: 1.5rem;
      font-size: .9rem;
      background: none;
      border: none;
      color: #666;
      cursor: pointer;
    }
    .identity-btn:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <header>
    <a href="/" class="logo">
      <img src="/images/logo.png" alt="QuejaYA.pe">
      <span class="visually-hidden">QuejaYA.pe</span>
    </a>
  </header>

  <h1>¡Te escuchamos!</h1>
  <p class="subtitle">Gestiona tus reclamos de forma fácil y rápida.</p>

  <div class="roles">
    <button id="btn-consumer">Soy consumidor</button>
    <button id="btn-company">Soy empresa</button>
  </div>
  <button class="identity-btn" id="btn-signup">¿No tienes cuenta? Regístrate</button>

  <!-- 1) Primero carga el widget -->
  <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
  <script>
    // 2) Espera a DOMReady
    document.addEventListener('DOMContentLoaded', () => {
      // 3) Inicializa Identity
      const netlifyIdentity = window.netlifyIdentity;
      if (!netlifyIdentity) {
        console.error('Netlify Identity not found. Have you enabled it in the dashboard?');
        return;
      }
      netlifyIdentity.on('init', user => console.log('Identity initialized, user:', user));
      netlifyIdentity.init();

      // 4) Helper para login + redirect
      function ensureAuthAndRedirect(path) {
        const user = netlifyIdentity.currentUser();
        if (user) {
          window.location.href = path;
        } else {
          netlifyIdentity.open('login');
          netlifyIdentity.on('login', () => window.location.href = path);
        }
      }

      // 5) Asocia botones
      document.getElementById('btn-consumer')
        .addEventListener('click', () => ensureAuthAndRedirect('/consumer/index.html'));
      document.getElementById('btn-company')
        .addEventListener('click', () => ensureAuthAndRedirect('/dashboard.html'));
      document.getElementById('btn-signup')
        .addEventListener('click', () => netlifyIdentity.open('signup'));
    });
  </script>
</body>
</html>

